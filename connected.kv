<Connected>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "You are now connected"
            font_size: 32
        Button:
            text: "Disconnect"
            font_size: 24
            on_press: root.disconnect()

<Error>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Error. Not connected"
            font_size: 32
        Button:
            text: "Return"
            font_size: 24
            on_press: root.goLogin()
